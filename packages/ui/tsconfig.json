{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "utils": ["src/lib/utils.ts"],
      "lib/*": ["src/lib/*"],
      "ui/*": ["src/components/ui/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
